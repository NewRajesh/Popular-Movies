<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detailContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/img_mini_poster"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/img_movie_poster"
            android:layout_marginTop="-30dp"
            android:src="@drawable/abc" />

        <RelativeLayout
            android:id="@+id/rl_rating_info"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/img_movie_poster"
            android:layout_toRightOf="@+id/img_mini_poster"
            android:background="#ffa800">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jupiter Ascending"
                android:textColor="@color/white" />

            <RatingBar
                android:id="@+id/rb_movie_rating"
                style="@style/CustomRatingBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_movie_title"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/tv_releasing_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rb_movie_rating"
                android:text="2015-12-09"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_rating_info"
            android:padding="5dp"
            android:textSize="14sp" />
    </RelativeLayout>
</ScrollView>